#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
LP_DIR=`cd $(dirname $0); cd ..; pwd`

echo 'Downloading Oracle Instant Client and SDK from AWS'
cd "$BUILD_DIR/vendor"
wget --quiet https://s3.amazonaws.com/heroku-oracle-buildpack/ocibasic.zip
wget --quiet https://s3.amazonaws.com/heroku-oracle-buildpack/ocisdk.zip
unzip ocibasic.zip
unzip ocisdk.zip
cd instantclient_12_1
ln -s libclntsh.so.12.1 libclntsh.so

mkdir -p $BUILD_DIR/.profile.d
cat <<EOF >$BUILD_DIR/.profile.d/oracle.sh
export LD_LIBRARY_PATH="\$BUILD_DIR/vendor/instantclient_12_1:\$LD_LIBRARY_PATH"
EOF

export LD_LIBRARY_PATH="\$BUILD_DIR/vendor/instantclient_12_1:\$LD_LIBRARY_PATH"

export | grep -E -e ' (PATH|LD_LIBRARY_PATH|LIBRARY_PATH|INCLUDE_PATH|CPATH|CPPPATH|PKG_CONFIG_PATH)='  > "$LP_DIR/export"