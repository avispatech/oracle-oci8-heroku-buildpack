#!/usr/bin/env ruby

require 'tempfile'
require 'fileutils'

$stdout.sync = true

BUILD_DIR = ARGV[0]

def indent msg
  puts "       #{msg}"
end

puts "-----> Found a .oracle.ini"

indent "Downloading file from AWS..."
result = `cd #{BUILD_DIR}/vendor; wget --quiet https://s3.amazonaws.com/heroku-oracle-buildpack/ocibasic.zip`

indent "Unpacking and Syslinking..."
result = `cd #{BUILD_DIR}/vendor; unzip ocibasic.zip; cd instantclient_12_1; ln -s libclntsh.so.12.1 libclntsh.so`

unless $?.success?
  indent "Failure while downloading OCI8 archive: #{$?}"
  exit 1
end

indent 'Setting LD_LIBRARY_PATH'
`export LD_LIBRARY_PATH=#{BUILD_DIR}/vendor/instantclient_12_1/`
indent 'LD_LIBRARY_PATH set to:'
`echo $LD_LIBRARY_PATH`

indent "Done."
